
@{
    ViewBag.Title = "User Profile";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <h4>User Information</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>User ID:</dt>
            <dd>@ViewBag.UserId</dd>

            <dt>Username:</dt>
            <dd>@User.Identity.Name</dd>

            <dt>Role:</dt>
            <dd>@ViewBag.UserRole</dd>
        </dl>
    </div>
</div>
